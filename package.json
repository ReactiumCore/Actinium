{
    "name": "Actinium",
    "version": "3.1.7",
    "author": "Reactium LLC",
    "scripts": {
        "start": "node ./src/index.js",
        "local": "npm run docs && cross-env NODE_ENV=development nodemon",
        "docker": "npm-run-all -s docker:*",
        "docker:build": "docker image build -t atomicreactor/actinium:$npm_package_version .",
        "docker:push": "docker push atomicreactor/actinium:$npm_package_version",
        "docs": "arcli docs -s .core,src/app,node_modules/@atomic-reactor -d docs"
    },
    "dependencies": {
        "@atomic-reactor/actinium-auth": "^1.0.4",
        "action-sequence": "^1.1.1",
        "apidoc": "^0.17.7",
        "body-parser": "*",
        "chalk": "^2.4.2",
        "cookie-parser": "*",
        "cookie-session": "^1.3.3",
        "cors": "^2.8.5",
        "cross-env": "^6.0.3",
        "ejs": "*",
        "events": "^3.0.0",
        "express": "*",
        "fast-deep-equal": "^3.1.1",
        "file-api": "^0.10.4",
        "fs-extra": "^8.1.0",
        "globby": "^10.0.1",
        "handlebars": "^4.5.1",
        "https": "^1.0.0",
        "js-beautify": "^1.10.2",
        "js-cookie": "^2.2.1",
        "jsonwebtoken": "^8.5.1",
        "kerberos": "1.1.3",
        "lunr": "^2.3.8",
        "memory-cache": "^0.2.0",
        "moment": "*",
        "mongodb": "^3.3.3",
        "morgan": "^1.9.1",
        "node-cron": "^2.0.3",
        "nodemailer": "^6.3.1",
        "nodemailer-mailgun-transport": "^1.4.0",
        "npm-run-all": "^4.1.5",
        "object-path": "^0.11.4",
        "parse": "^2.8.0",
        "parse-dashboard": "^2.0.5",
        "parse-server": "git+https://github.com/Atomic-Reactor/parse-server.git#3.9.x-actinium",
        "pluralize": "^8.0.0",
        "promise": "^8.0.3",
        "request": "^2.88.0",
        "saslprep": "^1.0.3",
        "semver": "^6.3.0",
        "sharp": "^0.23.4",
        "slugify": "^1.3.5",
        "string-to-arraybuffer": "^1.0.2",
        "tree-flatten": "^1.0.0",
        "underscore": "^1.9.1",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "atomic-reactor-cli": "^2.1.19",
        "eslint": "^5.13.0",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "nodemon": "^1.19.4",
        "prettier": "^1.18.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Atomic-Reactor/Actinium-2.0"
    },
    "engines": {
        "node": "12.13.0",
        "npm": ">=6.12.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*": [
            "arcli docs -s .core,src/app,node_modules/@atomic-reactor -d docs",
            "git add ./docs"
        ],
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
